<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray_light"
    tools:context=".modules.home.fragments.ProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/profile"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <ScrollView
        android:id="@+id/doc_profil_lay"
        android:background="@color/gray_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:background="@drawable/network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/gray_gradiant_bg">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/doctor_name_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="doctor name"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/doctor_spieciality_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="job title"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/reservation_item_lay"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="3dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_marginBottom="5dp"
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:id="@+id/doctor_img"
                                        android:padding="20dp"
                                        android:layout_width="80dp"
                                        android:background="@color/gray"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_camera_24"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_marginStart="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                    <RatingBar
                                        android:id="@+id/ratingBar"
                                        android:theme="@style/RatingBar"
                                        style="?android:attr/ratingBarStyleSmall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:rating="3.6"
                                        android:numStars="5"
                                        android:stepSize=".1"
                                        />
                                    <TextView
                                        android:id="@+id/appointment_item_patient_type"
                                        android:layout_width="match_parent"
                                        android:gravity="center"
                                        android:layout_height="wrap_content"
                                        android:text="@string/Newly_joined"
                                        android:layout_marginBottom="5dp"
                                        />
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@color/red"
                                        android:backgroundTint="@color/red"
                                        app:cardCornerRadius="5dp">
                                        <LinearLayout
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal">
                                            <ImageView
                                                android:layout_margin="5dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:src="@drawable/ic_upload_24"/>
                                            <LinearLayout
                                                android:layout_width="1dp"
                                                android:layout_height="match_parent"
                                                android:background="@color/white"/>
                                            <TextView
                                                android:layout_marginStart="10dp"
                                                android:layout_marginEnd="10dp"
                                                android:gravity="center"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:textColor="@color/white"
                                                android:text="@string/edit_profile"/>


                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray_light"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_margin="5dp"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                    <TextView
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/gray"
                                        android:text="0"/>
                                    <TextView
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/gray"
                                        android:text="@string/seen"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/gray_light"/>
                                <LinearLayout
                                    android:layout_margin="5dp"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                    <TextView
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/gray"
                                        android:text="0"/>
                                    <TextView
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/gray"
                                        android:text="@string/book"/>

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp">
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/doc_profile_tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabIndicatorHeight="2dp"
                        android:layout_gravity="fill"
                        app:tabTextColor="@color/blue"
                        app:tabSelectedTextColor="@color/blue"
                        app:tabGravity="fill"
                        app:tabMode="fixed">

                    </com.google.android.material.tabs.TabLayout>
                </androidx.cardview.widget.CardView>

                <androidx.viewpager2.widget.ViewPager2
                    android:layout_marginEnd="10dp"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"
                    android:background="#A6FFFFFF"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/doc_profile_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <include layout="@layout/no_search_layout"
        android:id="@+id/doc_profile_no_search_lay"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:visibility="gone"
        />
    <include layout="@layout/progress_layout"
        android:id="@+id/doc_profile_progrss_lay"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:visibility="gone"/>



</LinearLayout>